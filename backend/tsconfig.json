{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "copy-files": {
    "src/config/swagger.yaml": "dist/config/swagger.yaml"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
